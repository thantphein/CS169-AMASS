= form_for @project do |f|
  - if @project.errors.any?
    #error_explanation
      %h2= "#{pluralize(@project.errors.count, "error")} prohibited this project from being saved:"
      %ul
        - @project.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :organization
    = f.text_field :organization
  .field
    = f.label :blurb
    = f.text_area :blurb
  .field
    = f.label :nonprofit_mission
    = f.text_area :nonprofit_mission
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :deadline
    = f.datetime_select :deadline
  .field
    = f.label :status
    = f.text_field :status
  .field
    = f.label :budget
    = f.number_field :budget
  .actions
    = f.submit 'Save'
